<h:html xmlns="http://www.w3.org/2002/xforms"
        xmlns:h="http://www.w3.org/1999/xhtml">
    <h:head>
        <h:title>Constraints for simple and select answers</h:title>
        <model>
            <letref ref="/data" var="form"/>
            <letref ref="/data/number" var="num"/>
            <letref ref="/data/day" var="day"/>

            <instance>
                <data>
                    <number>1</number>
                    <day>saturday</day>
                    <day_and_number>
                    <places>
                        <country id='one'>
                            <name>Singapore</name>
                        </country>
                        <country id='two'>
                            <name>United States</name>
                            <state id='beehive_state'>Utah</state>
                            <state id='treasure_state'>Montana</state>
                        </country>
                    </places>
                </data>
            </instance>

            <bind nodeset="#num" calculate="4"/>
            <bind nodeset="day_and_number" calculate="concat(#num, #day)"/>
            <bind calculate="position(/data/animals/zoos) + 1" nodeset="/data/animals/id_num"/>
        </model>
    </h:head>

    <h:body>
    </h:body>
</h:html>
